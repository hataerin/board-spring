<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board.demo.mapper.UserMapper">

    <!-- 회원 목록 조회 -->
    <select id="findAll" resultType="User">
        SELECT
            *
        FROM user;
    </select>

    <!-- 회원 상세 조회 -->
    <select id="findById" resultType="User">
        SELECT
            *
        FROM user
        WHERE id = #{id};
    </select>

    <!-- 회원 등록 -->
    <insert id="createUser" parameterType="UserDto">
        INSERT
        INTO user(name, email, gender)
        VALUES (#{user.name}, #{user.email}, #{user.gender});
    </insert>

    <!-- 회원 수정 -->
    <update id="updateUser" parameterType="UserDto">
        update user
        set name = #{user.name},
            email = #{user.email},
            gender = #{user.gender}
        where id = #{id}
    </update>

    <!-- 회원 삭제 -->
    <delete id="deleteUser">
        DELETE
        FROM user
        WHERE id = #{id}
    </delete>


</mapper>