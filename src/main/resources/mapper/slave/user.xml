<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board.demo.mapper.slave.SlaveUserMapper">

    <!-- 회원 목록 조회 -->
    <select id="findAll" resultType="User">
        SELECT
            *
        FROM user;
    </select>

    <!-- 회원 주소 포함 조회 -->
    <select id="findAllDetail" resultType="UserAddressDto">
        SELECT A.*, B.zip_code, B.detail_addr
        FROM user A
                 LEFT OUTER JOIN address B
                                 ON A.id = B.user_id;

    </select>

    <!-- 회원 상세 조회 -->
    <select id="findById" resultType="UserAddressDto">
        SELECT A.*, B.zip_code, B.detail_addr
        FROM user A
                 LEFT OUTER JOIN address B
                                 ON A.id = B.user_id
        WHERE A.id = #{id};
    </select>

</mapper>