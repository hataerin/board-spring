<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board.demo.mapper.read.ReadBoardMapper">

    <!-- 게시글 목록 조회 -->
    <select id="findAll" resultType="board.demo.model.Board">
        SELECT
            *
        FROM board;
    </select>

    <!-- 게시글 상세 조회 -->
    <select id="findById" resultType="board.demo.model.Board">
        SELECT
            *
        FROM board
        WHERE id = #{id};
    </select>

    <select id="findDetailById" resultType="board.demo.model.BoardDetailDto">
        select A.id, A.title, A.content, A.writer, B.name, C.detail_addr
        from board A
                 left outer
                     join user B
                          on A.writer = B.id
                 join address C
                      on A.writer = C.user_id
        where A.id = #{id};
    </select>

</mapper>