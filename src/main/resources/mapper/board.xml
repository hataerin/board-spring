<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--<mapper namespace="board.demo.mapper.BoardMapper">-->
<mapper namespace="board.demo.mapper.master.BoardMapper">

    <!-- 게시글 목록 조회 -->
    <select id="findAll" resultType="Board">
        SELECT
            *
        FROM board;
    </select>

    <!-- 게시글 상세 조회 -->
    <select id="findById" resultType="Board">
        SELECT
            *
        FROM board
        WHERE id = #{id};
    </select>

    <select id="findDetailById" resultType="BoardDetailDto">
        select A.id, A.title, A.content, A.writer, B.name, C.detail_addr
        from board A
                 left outer
                     join user B
                          on A.writer = B.id
                 join address C
                      on A.writer = C.user_id
        where A.id = #{id};
    </select>

    <!-- 게시글 등록 -->
    <insert id="createBoard" parameterType="BoardDto">
        INSERT
        INTO board(title,
                   content,
                   writer)
        VALUES (#{board.title},
                #{board.content},
                #{board.writer});
    </insert>

    <!-- 게시글 수정 -->
    <update id="updateBoard" parameterType="BoardDto">
        update board
        set title = #{board.title},
            content = #{board.content},
            editor = #{board.editor}
        where id = #{id}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteBoard">
        DELETE
        FROM board
        WHERE id = #{id}
    </delete>


</mapper>